{
  "compilerOptions": {
    "declaration": true,
    "target": "ES2018",
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "strict": false,
    "lib": [
      "es2019"
    ],
    "module": "commonjs",
    "outDir": "lib",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
